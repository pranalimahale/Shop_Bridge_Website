@model IEnumerable<ShopBridge.Models.tbl_shop>
<table border="0" cellpadding="0" cellspacing="0" id="tblStud">
    <thead>
        <tr>
            <th>Product Id  
            </th>
            <th>Product Name  
            </th>
            <th>Price 
            </th>
            <th>Description 
            </th>
            <th>Image 
            </th>
            <th>View Data 
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {  
        <tr>
            <td>@item.Id
            </td>
            <td>@item.Name
            </td>
            <td>@item.Price_
            </td>
            <td>@item.Descreption
            </td>
            <td>
                <img src="~/Images/220px-Buddha_in_Sarnath_Museum_(Dhammajak_Mutra).jpg" height="100" width="100" />
            </td>
            <td>
                @* <input type="button" name="submit" value="Show Product Details" id="btnShowdata"  /> *@

                <a href="@Url.Action("Index", "ProductShow", new { Id = item.Id })" class="btn btn-primary"><i class="fa fa-edit "></i>Edit</a>
                <br />

            </td>
        </tr>     
    }
</table>
<style>
    #tblStud td {
        padding: 5px;
    }

    #tblStud th {
        background: #aea;
    }
</style>


